{
	"compileOnSave": true,
	"compilerOptions": {
		"alwaysStrict": true,
		"lib": [
			"esnext"
		],
		"module": "commonjs",
		"noUnusedParameters": true,
		"outDir": "./dist",
		"sourceMap": true,
		"types": [
			"node"
		],
		"declaration": true,
		"noUnusedLocals": true,
		"removeComments": false,
		"target": "es2019",
		"strict": true
	},
	"exclude": [
		"node_modules",
		"bin",
		"examples",
		"scripts"
	],
	"include": [
		"./src/**/*",
		"./test/**/*"
	]
}